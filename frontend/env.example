# Giftify Frontend Environment Configuration
# Copy this file to .env.local and update the values for your environment

# API Configuration
VITE_API_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/stage
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=Giftify
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Premium Gift Card Platform

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_MODE=true

# External Services (Optional)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Storage Configuration
VITE_STORAGE_PREFIX=giftify_

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANIMATIONS=true
VITE_TOAST_DURATION=5000

# Development Configuration
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=true 