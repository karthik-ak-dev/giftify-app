{
    "tableName": "giftify-backend-stage-wallet-transactions",
    "description": "Sample data for Wallet Transactions table - stores all wallet credit/debit transactions",
    "primaryKey": {
        "partitionKey": "userId (String)",
        "sortKey": "transactionId (String)"
    },
    "globalSecondaryIndexes": [
        {
            "indexName": "TransactionIdIndex",
            "partitionKey": "transactionId (String)"
        },
        {
            "indexName": "UserTransactionHistoryIndex",
            "partitionKey": "userId (String)",
            "sortKey": "createdAt (String)"
        }
    ],
