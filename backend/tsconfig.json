{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@/models/*": [
                "models/*"
            ],
            "@/services/*": [
                "services/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/middleware/*": [
                "middleware/*"
            ],
            "@/routes/*": [
                "routes/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}