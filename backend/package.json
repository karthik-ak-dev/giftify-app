{
    "name": "giftify-backend",
    "version": "1.0.0",
    "description": "Giftify Backend API",
    "main": "src/app.js",
    "scripts": {
        "build": "webpack --mode=production",
        "dev": "serverless offline",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "start": "node dist/app.js",
        "deploy:stage": "serverless deploy --config serverless-stage.yml",
        "deploy:prod": "serverless deploy --config serverless-prod.yml",
        "remove:stage": "serverless remove --config serverless-stage.yml",
        "remove:prod": "serverless remove --config serverless-prod.yml",
        "offline:stage": "serverless offline --config serverless-stage.yml",
        "offline:prod": "serverless offline --config serverless-prod.yml",
        "logs:stage": "serverless logs -f api --config serverless-stage.yml",
        "logs:prod": "serverless logs -f api --config serverless-prod.yml",
        "info:stage": "serverless info --config serverless-stage.yml",
        "info:prod": "serverless info --config serverless-prod.yml"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.0.0",
        "@aws-sdk/lib-dynamodb": "^3.0.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "joi": "^17.9.2",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.0",
        "ulid": "^2.3.0",
        "serverless-http": "^3.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/express": "^4.17.17",
        "@types/cors": "^2.8.13",
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/jest": "^29.5.0",
        "typescript": "^5.0.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "serverless-webpack": "^5.13.0",
        "serverless-offline": "^13.0.0",
        "ts-loader": "^9.4.0",
        "jest": "^29.5.0",
        "eslint": "^8.42.0",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0"
    },
    "keywords": [
        "serverless",
        "aws",
        "lambda",
        "dynamodb",
        "giftcard",
        "api"
    ],
    "author": "Your Name",
    "license": "MIT"
}